<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.miwoktranslation.MainActivity">

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:orientation="vertical">

       <TextView
           android:id="@+id/numbers"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:text="@string/number_category"
           android:textSize="20sp"
           android:textColor="@android:color/white"
           android:padding="20dp"
           android:background="#4DD0E1"
           />

       <TextView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:text="@string/family_category"
           android:textSize="20sp"
           android:textColor="@android:color/white"
           android:padding="20dp"
           android:background="#26A69A"
           />

       <TextView
           android:id="@+id/colors"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:text="@string/color_category"
           android:textSize="20sp"
           android:textColor="@android:color/white"
           android:padding="20dp"
           android:background="#FFA000"
           />

       <TextView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:text="@string/phrases_category"
           android:textSize="20sp"
           android:textColor="@android:color/white"
           android:padding="20dp"
           android:background="#7CB342"/>

   </LinearLayout>

</android.support.constraint.ConstraintLayout>
